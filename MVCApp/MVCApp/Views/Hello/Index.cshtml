@{
    ViewData["title"] = "Hello/Index";
    var name = ViewData["name"];
    var mail = ViewData["mail"];
    var tel = ViewData["tel"];
}

<div class="text-left">
    <h1 class="deisplay-3">Index</h1>
    <p class="h4 mb-4">@ViewData["Message"]</p>
    <form asp-controller="Hello" asp-action="Form">
        <div class="form-group">
            <label asp-for="@name" class="h5"></label>
            <input asp-for="@name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@mail" class="h5"></label>
            <input asp-for="@mail" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@tel" class="h5"></label>
            <input asp-for="@tel" class="form-control" />
        </div>
        <input type="submit" value="send" />
    </form>
</div>